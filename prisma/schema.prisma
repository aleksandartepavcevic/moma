generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Bundle {
  id     Int    @id @default(autoincrement())
  name  String
  paid Int
  revenue Int @default(0)
  createdAt DateTime @default(now())
  sales Sale[]
}

model Sale {
  id Int @id @default(autoincrement())
  name String
  revenue Int @default(0)
  createdAt DateTime @default(now())
  bundle Bundle @relation(fields: [bundleId], references: [id])
  bundleId Int

  @@index([bundleId])
}